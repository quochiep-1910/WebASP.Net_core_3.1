@model eShop.ViewModels.System.Auth.LoginWith2fa
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Two-Factor Authentication</title>
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/authen2Facss.css">
</head>
<body>
    <!-- partial:index.partial.html -->
    <div class="container">
        <form id="form" asp-action="LoginWith2Fa" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1>TWO-FACTOR AUTHENTICATION</h1>
            <input id="RememberMe" type="hidden" asp-for="RememberMe" value="@Model.RememberMe" />
            <input type="hidden" asp-for="UserName  " />
            <input asp-for="TwoFactorCode " class="form-control" type="text" />
            <input type="checkbox" id="RememberMachine" asp-for="RememberMachine" />
            <label>Ghi nhớ tài khoản trên thiết bị này</label>
            <div class="form__buttons">
                <button type="submit" class="btn btn-success">Continue</button>
            </div>
            <div id="messager">
            </div>
        </form>
        @if (@TempData["Error"] != null)
        {
            <div style="text-align:center">

            <span style="color:red">@TempData["Error"]</span>
            </div>
        }
    </div>
    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/inputmask/inputmask.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery.inputmask/3.3.4/inputmask/jquery.inputmask.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/jquery-mockjax@2.2.2/src/jquery.mockjax.min.js'></script>

    <link href="~/css/authen2Facss.css" rel="stylesheet" />
    <script src="~/js/authen2Fa.js"></script>
</body>
</html>