@model IEnumerable<eShop.ViewModels.Sales.RevenueStatistics.RevenueStatisticViewModel>

@{
    var XLabels = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.Date.Date.ToString("MM/dd/yyyy")).ToList());
    var YValues = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.Benefit).ToList());
    var ZValues = Newtonsoft.Json.JsonConvert.SerializeObject(Model.Select(x => x.Revenues).ToList());
    ViewData["Title"] = "Thống kê";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Thống kê</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Thống kê</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-7 connectedSortable">
                    <section>
                        <div class="card">
                            <div class="card-header border-0">
                                <div class="d-flex justify-content-between">
                                    <i class="fas fa-chart-pie mr-1"></i>
                                    <h3 class="card-title">Doanh Thu</h3>
                                </div>
                            </div>

                            <div class="card-body">

                                <div class="chart-container">
                                    <canvas id="chart" style="width:100%; height:500px"></canvas>
                                </div>
                            </div><!-- /.card-body -->
                        </div>
                    </section>
                </div>
                <div class="col-lg-5 connectedSortable">

                    <section>

                        <div class="card">
                            <div class="card-header border-0">

                                <h3 class="card-title">
                                    <i class="fas fa-map-marker-alt mr-1"></i>
                                    Dữ liệu Thống Kê
                                </h3>
                            </div>
                            <div class="card-body">
                                <div style="height: 500px; width: 100%;">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <td>Ngày</td>
                                                <td>Doanh Số</td>
                                                <td>Lợi Nhuận</td>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @item.Date.ToString("dd/MM/yyyy")
                                                    </td>
                                                    <td>
                                                        @item.Revenues
                                                    </td>
                                                    <td>
                                                        @item.Benefit
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div><!-- /.card-body -->
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </section>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
