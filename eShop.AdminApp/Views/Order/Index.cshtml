@using eShop.ViewModels.Common
@model PagedResult<eShop.ViewModels.Sales.Order.OrderViewModel>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{

    <script src="~/js/controller/order/pagingOrderController.js"></script>

}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách đơn hàng</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Danh sách đơn hàng </li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6 col-xs-12">
                        <a class="btn btn-success" asp-action="Create" asp-controller="Order">Tạo Mới </a>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <form id="btnSearch">
                            <div class="row">
                                <div class=" col-md-3">
                                    <input type="text" id="Keyword" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                                </div>

                                <div class=" col-md-3">
                                    <button type="submit" class="btn btn-primary">Tìm</button>
                                    <button type="button" id="btnResetOrder" class="btn btn-dark">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <br />

                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Mã đặt hàng
                            </th>

                            <th>
                                Tên Khách hàng
                            </th>
                            <th>
                                Địa chỉ
                            </th>
                            <th>
                                Ngày đặt
                            </th>
                            <th>
                                Trạng Thái
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="orderTopBody">
                    </tbody>
                </table>
                <div class="Pager paginationPager"></div>
            </div>
            @*@await Component.InvokeAsync("Pager", Model)*@
        </div>
    </section>
</div>

<script id="tplOrderTop" type="x-tmpl-mustache">
        <tr>
              <td>
                {{id}}
              </td>
              <td>
                 {{ShipName}}
              </td>
              <td>
              {{ShipAddress}}
              </td>
              <td>
               {{OrderDate}}
              </td>
              <td>
            {{ Status}}
              </td>
              <td>
                <a href="/Order/Edit/{{id}}">Sửa</a> |
                <a href="/Order/Details/{{id}}">Xem</a> |
                <a href="/Order/Delete/{{id}}">Xoá</a> |
                <a href="/Order/PrintOrder/{{id}}"><i class="fas fa-print"></i></a>
              </td>
         </tr>
</script>