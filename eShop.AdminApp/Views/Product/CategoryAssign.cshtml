@model eShop.ViewModels.Catalog.Products.CategoryAssignRequest

@{
    ViewData["Title"] = "Gán danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Gán danh mục</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Gán danh mục</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div>
                    <a class="btn btn-success" asp-action="Index" asp-controller="Product">Về Danh Sách</a>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="CategoryAssign">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            @for (var i = 0; i < Model.Categories.Count; i++)
                            {
                                <div class="form-group">
                                    <label>
                                        @Model.Categories[i].Name
                                        <input type="checkbox" asp-for="Categories[i].Selected" />
                                        <input type="hidden" asp-for="Categories[i].Id" />
                                        <input type="hidden" asp-for="Categories[i].Name" />
                                    </label>
                                </div>
                            }

                            <div class="form-group">
                                <input type="submit" value="Lưu lại" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>