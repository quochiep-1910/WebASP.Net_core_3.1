@using eShop.ViewModels.Common
@model PagedResult<eShop.ViewModels.System.Users.UserViewModel>

@{
    ViewData["Title"] = "Danh sách User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>

    <script src="/js/controller/user/userController.js"></script>
    <script>
        var site = new UserController();
        site.initialize();
    </script>
    <link rel="stylesheet" href="/css/TichXanh.css">

}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Danh sách User</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item active">Blank Page</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">

        <!-- Default box -->
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6 col-xs-12">
                        <a class="btn btn-success" asp-action="Create" asp-controller="User">Tạo Mới </a>
                    </div>
                    <div class="col-md-6 col-xs-12">
                        <form asp-action="Index" method="get">
                            <div class="row">
                                <div class=" col-md-9">
                                    <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" />
                                </div>
                                <div class=" col-md-3">
                                    <button type="submit" class="btn btn-primary">Tìm</button>
                                    <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-dark">Reset</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                @* <div class="row">

                    <div class="col-md-12 ">
                    @if (ViewBag.SuccessMsg != null)
                    {
                    <div id="msgAlert" class="alert alert-success text-center" role="alert">
                    @ViewBag.SuccessMsg
                    </div>
                    }
                    </div>
                    </div> *@
                <br />

                <table class="table">

                    <thead>
                        <tr>
                            <th>
                                ID
                            </th>
                            <th>
                                Họ Tên
                            </th>
                            <th>
                                Tài Khoản
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Trạng Thái
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                <td>
                                    @item.FirstName  @item.LastName
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                                <td>

                                    @Html.DisplayFor(modelItem => item.Email)
                                    &nbsp;   &nbsp;
                                    @if (item.EmailConfirmed)
                                    {
                                        <div class="EmailVerified">

                                            <div class="tooltip">
                                                <span class="verified-EmailVerified-icon">

                                                    <svg focusable="false" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">

                                                        <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z">
                                                        </path>
                                                    </svg>
                                                </span>
                                                <span class="tooltiptext">Email đã được xác minh</span>
                                            </div>
                                        </div>
                                    }
                                </td>
                                <td>

                                    @{
                                        if (item.LockoutEnabled)
                                        {
                                            <span class="Lockout badge bg-red" data-id="@item.Id">
                                                Locked
                                            </span>
                                            <div class="tooltip">
                                                ...
                                                <span class="tooltiptext">@item.LockoutEnd</span>
                                            </div>

                                        }
                                        else
                                        {

                                            <span class="EnabledLockout badge bg-green" data-id="@item.Id">Active</span>
                                        }
                                    }
                                </td>

                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Xem", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Xoá", "Delete", new { id = item.Id }) |
                                    @Html.ActionLink("Gán Quyền", "RoleAssign", new { id = item.Id })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </section>
</div>