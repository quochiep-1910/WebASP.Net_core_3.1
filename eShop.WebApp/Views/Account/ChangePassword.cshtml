@model eShop.ViewModels.System.Users.AppUserChangePasswordDTO
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-7 col-sm-offset-1">
    <div class="login-form">
        <!--login form-->
        <h2>Change password</h2>

        <form asp-action="ChangePassword" asp-controller="Account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="OldPasswordHash" class="control-label"></label>
                <input asp-for="OldPasswordHash" type="password" class="form-control" />
                <span asp-validation-for="OldPasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PasswordHash" class="control-label"></label>
                <input asp-for="PasswordHash" type="password" class="form-control" />
                <span asp-validation-for="PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Change</button>
        </form>
    </div><!--/login form-->
</div>